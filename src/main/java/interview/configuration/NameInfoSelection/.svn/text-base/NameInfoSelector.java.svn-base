package interview.configuration.NameInfoSelection;

import java.awt.Graphics;

import javax.swing.JPanel;

/**
 * Returns the name and information text entered in configuration mode of 
 * an interview element
 * 
 * 
 */
public interface NameInfoSelector
{
	/**
	 * returns the name for the element
	 */
	public String getName();
	
	/**
	 * sets the name of the element in the textfield
	 * @param name
	 */
	public void setName(String name);
	
	/**
	 * returns the optional information displayed while interview
	 */
	public String getInfo();
	
	/**
	 * Sets the info displayed in the info box
	 */
	public void setInfo(String info);
	
	/**
	 * returns the panel for configuring name / info
	 */
	public JPanel getConfigurationPanel();
	
	/**
	 * returns the panel displaying name / info while interview
	 */
	public JPanel getControllerPanel();

}
